<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="and5.abrar.challenge_ch8">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".view.AnimeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Challengech8"
        tools:targetApi="31">
        <activity
            android:name=".view.DetailLayout"
            android:exported="false"
            android:label="@string/title_activity_detail_layout"
            android:theme="@style/Theme.Challengech8" />
        <activity
            android:name=".view.HomeLayout"
            android:exported="false"
            android:label="@string/title_activity_home_layout"
            android:theme="@style/Theme.Challengech8" />
        <activity
            android:name=".view.RegisterLayout"
            android:exported="false"
            android:label="@string/title_activity_register_layout"
            android:theme="@style/Theme.Challengech8" />
        <activity
            android:name=".view.LoginLayout"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Challengech8"
            tools:ignore="RedundantLabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>